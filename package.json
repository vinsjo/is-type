{
    "name": "x-is-type",
    "version": "1.2.9",
    "description": "A minimal package for simple type-checks of basic types",
    "author": "Vincent Sj√∂gren",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/vinsjo/x-is-type"
    },
    "keywords": [
        "ESM",
        "CommonJS",
        "typecheck"
    ],
    "type": "module",
    "source": "./src/index.ts",
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "umd:main": "./dist/index.umd.js",
    "types": "./dist/index.d.ts",
    "exports": {
        "require": "./dist/index.cjs",
        "import": "./dist/index.mjs",
        "default": "./dist/index.modern.js",
        "types": "./dist/index.d.ts"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "del-cli dist && microbundle src/index.ts --compress --no-sourcemap && npm run test:build",
        "dev": "microbundle watch",
        "lint": "eslint src/** __tests__/** --ext .ts",
        "format": "prettier --write .",
        "test": "jest index",
        "test:build": "jest build",
        "test:coverage": "jest --coverage",
        "pre-commit": "npm test && npx lint-staged",
        "pre-push": "npm test && npm run lint",
        "prepublishOnly": "npm run pre-push && npm run build",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@jest/globals": "^29.3.1",
        "@typescript-eslint/eslint-plugin": "^8.7.0",
        "@typescript-eslint/parser": "^8.7.0",
        "del-cli": "^5.0.0",
        "eslint": "^9.11.1",
        "husky": "^8.0.0",
        "lint-staged": "^15.2.10",
        "microbundle": "^0.15.1",
        "prettier": "^2.8.0",
        "ts-jest": "^29.0.3"
    },
    "lint-staged": {
        "*.{ts}": [
            "eslint"
        ],
        "*.{ts,json}": [
            "prettier --write"
        ]
    }
}
